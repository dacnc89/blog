<%= form_for @user, html: {multipart: true} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.file_field :avatar %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
