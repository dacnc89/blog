<h1> Form for comment </h1>
<%= form_for [ @article, @article.comments.build] do |f| %>
  <p>Please enter your comment 
  <% if current_user %>
    <%= current_user.name %> :
  <% end %>
  </p>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
