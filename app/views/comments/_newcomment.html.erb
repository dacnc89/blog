<div id = "show-comment-<%=@comment.id%>">
  <%= link_to @comment.user.name, user_path(@comment.user) %>

  <%= @comment.body %>

  <br>
  <%= time_ago_in_words(@comment.created_at) %> ago

  <% if user_signed_in? && session[:user_id] == @comment.user.id %>
  <%= link_to 'Edit', edit_article_comment_path(@comment.article_id, @comment), remote: true %>
  <%= link_to 'Delete', article_comment_path(@comment.article_id, @comment),remote: true, method: :delete, data: {confirm: 'Do you want to delete this comment?'} %>
  <% end %>
</div>
